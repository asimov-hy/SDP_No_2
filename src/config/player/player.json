{
  "_notes": "Organized for readability. Sections: core_attributes, rendering, health_states, effects.",

  "core_attributes": {
    "_notes": "Defines base physics and behavior values.",
    "scale": 0.9,
    "health": 1000000,
    "hitbox_scale": 0.85,

    "speed": 300,
    "accel_rate": 3000,
    "friction_rate": 500,
    "max_speed_mult": 1.8
  },

  "combat": {
    "_notes": "All combat systems: primary, secondary, collision",

    "primary": {
      "_notes": "Normal auto-fire (SPACE)",
      "cooldown": 0.2,
      "damage": 1,
      "speed": 900
    },

    "secondary": {
      "_notes": "Charged spread shot (SHIFT) - hold to charge, release to fire",
      "cooldown": 1.5,
      "damage": 0.5,
      "speed": 700,
      "charge_levels": [
        { "time": 0.0,  "count": 3, "angle": 15 },
        { "time": 0.5,  "count": 5, "angle": 25 },
        { "time": 1.0,  "count": 7, "angle": 35 },
        { "time": 1.5,  "count": 9, "angle": 45 }
      ]
    },

    "collision": {
      "_notes": "Contact damage when player hits enemies",
      "damage": 1,
      "knockback": 200
    }
  },

  "render": {
    "_notes": "Visual representation and drawing mode: image or shape",
    "mode": "image",
    "size": [64, 64],

    "sprite": {
      "path": "assets/images/sprites/player/robot_Garda.png"
    },

    "bullet": {
      "path": "assets/images/sprites/projectiles/plasma_red.png",
      "size": [16, 32]
    },

    "default_shape": {
      "shape_type": "rect",
      "color": [255, 255, 255]
    }
  },

  "health_states": {
    "_notes": "Controls appearance and feedback based on health.",
    "thresholds": {
      "moderate": 2,
      "critical": 1
    },

    "image_states": {
      "normal": "assets/images/sprites/player/robot_Garda.png",
      "damaged_moderate": "assets/images/sprites/player/robot_Garda.png",
      "damaged_critical": "assets/images/sprites/player/robot_Garda.png"
    },

    "color_states": {
      "normal": [255, 255, 255],
      "damaged_moderate": [255, 160, 120],
      "damaged_critical": [180, 30, 30]
    }
  },

  "state_effects": {
    "knockback": {
        "duration": 0.15,
        "interaction_state": "DEFAULT"
    },
    "stun": {
      "duration": 1,
      "interaction_state": "INTANGIBLE",
      "knockback_strength": 600,
      "next_state": "recovery"
    },
    "recovery": {
      "duration": 2.5,
      "interaction_state": "DEFAULT",
      "shield_radius": 56,
      "shield_knockback": 350,
      "debuffs": {
        "speed": { "multiplier": 0.5 },
        "fire_rate": { "multiplier": 0.3 }
      }
    }
  },

  "stress": {
    "max": 10.0,
    "threshold": 8.0,
    "decay_rate": 4.0,
    "grace_period": 1.0,
    "per_damage": 1.0
  }
}
